{
  "css.validate": true,
  "css.lint.unknownAtRules": "ignore",
  "files.associations": {
    "*.css": "postcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "tailwindCSS.includeLanguages": {
    "plaintext": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    "class:\\s*\"([^\"]*)\"",
    "class:\\\\s*'([^']*)'",
    "class:\\\\s*`([^`]*)`"
  ]
}
